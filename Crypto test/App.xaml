<Application x:Class="Crypto_test.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:Crypto_test.View" 
             xmlns:viewModel="clr-namespace:Crypto_test.ViewModel"
             xmlns:local="clr-namespace:Crypto_test">
    <Application.Resources>

        <ResourceDictionary>
            <!-- Подключаем MergedDictionaries -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Themes/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>



            <!-- Конвертер для изменения цвета цены -->
            <view:PriceChangeToColorConverter x:Key="PriceChangeToColorConverter"/>

            <!-- DataTemplate для главного окна -->
            <DataTemplate DataType="{x:Type viewModel:MainViewModel}">
                <view:MainView />
            </DataTemplate>
        </ResourceDictionary>

    </Application.Resources>
</Application>
